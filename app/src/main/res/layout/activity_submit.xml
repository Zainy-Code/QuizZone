<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".submitActivity"
    android:background="#2F4F4F "
    >


    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Questions : "
        android:fontFamily="@font/charm"
        android:textSize="24sp"

        android:background="#C9EDED"
        android:textAlignment="center"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/txtCorrect"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="24dp"

        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txtCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Correct Answer : "
        android:fontFamily="@font/charm"
        android:textSize="24sp"
        android:background="#C9EDED"
        android:textAlignment="center"

        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal"
        app:layout_constraintBottom_toTopOf="@+id/txtWrong"
        />

    <TextView
        android:id="@+id/txtWrong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Wrong Answer : "
        android:fontFamily="@font/charm"
        android:textSize="24sp"
        android:background="#C9EDED"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCorrect"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:fontFamily="@font/charm"
        android:backgroundTint="#C9EDED"
        android:textSize="32sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnExit"
        android:layout_marginBottom="128dp"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:fontFamily="@font/charm"
        android:textSize="32sp"
        android:backgroundTint="#C9EDED"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btnReset"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="128dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>